            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"productKey\": \"prod123\",\n    \"name\": \"Smartphone\",\n    \"description\": \"Latest model smartphone\",\n    \"price\": 699.99\n}"
